---
import trips from '../data/trips.json';
---

<section id="trips" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Popular Destinations
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Handpicked travel packages to the most beautiful destinations in South India
      </p>
    </div>

    <!-- Trip Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {trips.map((trip) => (
        <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <!-- Image -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src={trip.image} 
              alt={trip.title}
              class="w-full h-full object-cover"
            />
            <!-- Badge -->
            <div class="absolute top-4 right-4">
              <span class="bg-white/95 backdrop-blur text-gray-800 px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                {trip.type}
              </span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-5">
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              {trip.title}
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              {trip.desc}
            </p>

            <!-- Trip Details -->
            <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {trip.duration}
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                {trip.kmOneWay} km
              </div>
            </div>

            <!-- CTA Button -->
            <button 
              class="tariff-btn w-full bg-blue-600 text-white font-semibold py-3 rounded-xl hover:bg-blue-700 transition-all duration-300 shadow-md hover:shadow-lg"
              data-trip-id={trip.id}
              data-trip-title={trip.title}
              data-trip-km={trip.kmOneWay}
              data-trip-duration={trip.duration}
            >
              Check Tariff
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Handle tariff button clicks
  document.addEventListener('DOMContentLoaded', () => {
    const tariffButtons = document.querySelectorAll('.tariff-btn');
    
    tariffButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tripData = {
          id: button.getAttribute('data-trip-id'),
          title: button.getAttribute('data-trip-title'),
          kmOneWay: button.getAttribute('data-trip-km'),
          duration: button.getAttribute('data-trip-duration')
        };

        // Dispatch custom event
        const event = new CustomEvent('open-calculator', {
          detail: tripData,
          bubbles: true
        });
        document.dispatchEvent(event);
      });
    });
  });
</script>
