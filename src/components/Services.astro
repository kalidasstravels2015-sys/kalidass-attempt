---
import siteContent from '../data/siteContent.json';
const services = siteContent.services;
---

<section id="services" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Our Services
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Comprehensive travel solutions for every occasion
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
      {services.map((service) => (
        <a href={service.link} class="group relative h-64 sm:h-80 rounded-2xl overflow-hidden shadow-lg cursor-pointer block">
          <!-- Background Image -->
          <img 
            src={service.image} 
            alt={service.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300"></div>

          <!-- Content -->
          <div class="absolute inset-0 flex flex-col justify-end p-4 sm:p-6">
            <h3 class="text-lg sm:text-2xl font-bold text-white mb-1 sm:mb-2">
              {service.title}
            </h3>
            <p class="text-gray-200 text-xs sm:text-sm line-clamp-3">
              {service.description}
            </p>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>
