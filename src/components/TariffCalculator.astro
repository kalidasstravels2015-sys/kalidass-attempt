---
import trips from '../data/trips.json';
---

<div id="tariff-calculator" class="fixed inset-0 z-50 hidden">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="calculator-backdrop"></div>
  
  <!-- Modal -->
  <div class="relative flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-6 rounded-t-2xl">
        <div class="flex justify-between items-center">
          <h3 class="text-2xl font-bold" id="modal-title">Trip Calculator</h3>
          <button id="close-calculator" class="text-white hover:text-gray-200 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="text-blue-100 mt-2" id="modal-subtitle">Estimated pricing for your trip</p>
      </div>

      <!-- Content -->
      <div class="p-6 space-y-6">
        <!-- Trip Details -->
        <div class="bg-gray-50 rounded-xl p-5">
          <h4 class="font-semibold text-gray-900 mb-3">Trip Details</h4>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-600">One Way Distance</span>
              <p class="font-semibold text-gray-900" id="detail-oneway">-</p>
            </div>
            <div>
              <span class="text-gray-600">Total Distance</span>
              <p class="font-semibold text-gray-900" id="detail-total">-</p>
            </div>
            <div>
              <span class="text-gray-600">Duration</span>
              <p class="font-semibold text-gray-900" id="detail-duration">-</p>
            </div>
            <div>
              <span class="text-gray-600">Driver Bata</span>
              <p class="font-semibold text-gray-900" id="detail-bata">-</p>
            </div>
          </div>
        </div>

        <!-- Pricing Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Etios Card -->
          <div class="border-2 border-blue-200 rounded-xl p-5 hover:border-blue-400 transition">
            <div class="flex items-center justify-between mb-3">
              <h4 class="font-bold text-lg text-gray-900">Toyota Etios</h4>
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="space-y-2 text-sm text-gray-600 mb-4">
              <p>• Comfortable Sedan</p>
              <p>• 4 Passengers + Driver</p>
              <p>• Rate: ₹13/km</p>
            </div>
            <div class="bg-blue-50 rounded-lg p-3">
              <p class="text-gray-600 text-sm mb-1">Estimated Cost</p>
              <p class="text-2xl font-bold text-blue-600" id="cost-etios">₹0</p>
            </div>
          </div>

          <!-- Innova Card -->
          <div class="border-2 border-green-200 rounded-xl p-5 hover:border-green-400 transition">
            <div class="flex items-center justify-between mb-3">
              <h4 class="font-bold text-lg text-gray-900">Toyota Innova</h4>
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="space-y-2 text-sm text-gray-600 mb-4">
              <p>• Premium SUV</p>
              <p>• 6-7 Passengers + Driver</p>
              <p>• Rate: ₹18/km</p>
            </div>
            <div class="bg-green-50 rounded-lg p-3">
              <p class="text-gray-600 text-sm mb-1">Estimated Cost</p>
              <p class="text-2xl font-bold text-green-600" id="cost-innova">₹0</p>
            </div>
          </div>
        </div>

        <!-- Important Notes -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
          <h4 class="font-semibold text-yellow-900 mb-2 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Important Notes
          </h4>
          <ul class="text-sm text-yellow-800 space-y-1">
            <li>• Prices are indicative and may vary based on season and availability</li>
            <li>• Driver allowance (Bata) is included in the estimate</li>
            <li>• Toll charges and parking fees are additional</li>
            <li>• Final pricing will be confirmed via WhatsApp</li>
          </ul>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-3">
          <button 
            id="whatsapp-enquiry"
            class="flex-1 bg-green-600 text-white font-semibold py-3 rounded-xl hover:bg-green-700 transition flex items-center justify-center"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Confirm via WhatsApp
          </button>
          <button 
            id="close-calculator-bottom"
            class="flex-1 bg-gray-200 text-gray-700 font-semibold py-3 rounded-xl hover:bg-gray-300 transition"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ trips }}>
  let currentTrip = null;

  // Open calculator when custom event is fired
  document.addEventListener('open-calculator', (event) => {
    const tripData = event.detail;
    const tripId = parseInt(tripData.id);
    
    // Find the trip in JSON data
    currentTrip = trips.find(t => t.id === tripId);
    
    if (currentTrip) {
      // Calculate costs
      const totalKm = currentTrip.kmOneWay * 2;
      const durationDays = parseInt(currentTrip.duration);
      const driverBata = 300 * durationDays;
      const etiosCost = (totalKm * 13) + driverBata;
      const innovaCost = (totalKm * 18) + driverBata;
      
      // Update UI
      document.getElementById('modal-title').textContent = currentTrip.title;
      document.getElementById('modal-subtitle').textContent = `${currentTrip.type} Package - ${currentTrip.duration}`;
      document.getElementById('detail-oneway').textContent = `${currentTrip.kmOneWay} km`;
      document.getElementById('detail-total').textContent = `${totalKm} km`;
      document.getElementById('detail-duration').textContent = currentTrip.duration;
      document.getElementById('detail-bata').textContent = `₹${driverBata}`;
      document.getElementById('cost-etios').textContent = `₹${etiosCost.toLocaleString('en-IN')}`;
      document.getElementById('cost-innova').textContent = `₹${innovaCost.toLocaleString('en-IN')}`;
      
      // Show modal
      document.getElementById('tariff-calculator').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  });

  // Close calculator
  const closeCalculator = () => {
    document.getElementById('tariff-calculator').classList.add('hidden');
    document.body.style.overflow = '';
  };

  document.getElementById('close-calculator')?.addEventListener('click', closeCalculator);
  document.getElementById('close-calculator-bottom')?.addEventListener('click', closeCalculator);
  document.getElementById('calculator-backdrop')?.addEventListener('click', closeCalculator);

  // WhatsApp enquiry
  document.getElementById('whatsapp-enquiry')?.addEventListener('click', () => {
    if (currentTrip) {
      const etiosCost = (currentTrip.kmOneWay * 2 * 13) + (300 * parseInt(currentTrip.duration));
      const innovaCost = (currentTrip.kmOneWay * 2 * 18) + (300 * parseInt(currentTrip.duration));
      const message = encodeURIComponent(
        `Hi! I'm interested in the ${currentTrip.title} package.\n\n` +
        `Estimated Costs:\n` +
        `Etios: ₹${etiosCost.toLocaleString('en-IN')}\n` +
        `Innova: ₹${innovaCost.toLocaleString('en-IN')}\n\n` +
        `Please confirm the final pricing and availability.`
      );
      window.open(`https://wa.me/919952749408?text=${message}`, '_blank');
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeCalculator();
    }
  });
</script>
