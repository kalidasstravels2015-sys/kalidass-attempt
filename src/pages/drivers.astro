---
import Layout from '../layouts/Layout.astro';
import siteContent from '../data/siteContent.json';
import { Star, Clock, Languages, ShieldCheck } from 'lucide-react';

const drivers = siteContent.drivers;
---

<Layout title="Our Drivers - Kalidass Travels" description="Meet our professional, verified, and experienced drivers.">
  <main class="pt-24 pb-12 bg-slate-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-slate-900 mb-4">Our Professional Drivers</h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Experienced, verified, and multilingual drivers dedicated to making your journey safe and comfortable.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {drivers.map((driver) => (
          <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4 hover:shadow-md transition-all duration-300 group">
            <div class="relative mb-4 overflow-hidden rounded-xl">
              <img 
                src={driver.image} 
                class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-500" 
                alt={driver.name} 
              />
              <span class="absolute bottom-2 left-2 bg-indigo-600 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">
                {driver.tag}
              </span>
            </div>
            
            <h3 class="font-bold text-lg text-slate-900">{driver.name}</h3>
            
            <div class="inline-flex items-center gap-1.5 mt-1 mb-2 px-2 py-0.5 bg-green-50 border border-green-100 rounded-md text-[10px] font-bold text-green-700">
              <ShieldCheck className="w-3 h-3" />
              PVC Verified
            </div>

            <div class="text-sm text-slate-600 mt-1 space-y-2">
              <div class="flex items-center gap-2">
                <Clock className="w-4 h-4 text-slate-400" />
                <span>{driver.experience}</span>
              </div>
              <div class="flex items-center gap-2">
                <Languages className="w-4 h-4 text-slate-400" />
                <span>{driver.languages}</span>
              </div>
            </div>
            
            <div class="flex text-yellow-400 mt-4 gap-0.5">
              <Star className="w-4 h-4 fill-current" />
              <Star className="w-4 h-4 fill-current" />
              <Star className="w-4 h-4 fill-current" />
              <Star className="w-4 h-4 fill-current" />
              <Star className="w-4 h-4 fill-current" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>
