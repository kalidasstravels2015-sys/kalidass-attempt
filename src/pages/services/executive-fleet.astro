---
import Layout from "../../layouts/Layout.astro";

const title = "Executive & VIP Fleet Services";
const description =
    "Premium chauffeur-driven luxury cars for leadership teams and high-profile guests. Impeccable service guaranteed.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <main class="bg-slate-50 min-h-screen">
        <!-- Hero Section -->
        <section
            class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-gray-900 text-white pt-32 pb-20 px-6"
        >
            <div class="max-w-5xl mx-auto text-center">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-amber-500/20 border border-amber-400/30 text-amber-200 text-xs font-bold uppercase mb-6"
                >
                    <i class="fa-solid fa-crown"></i> Premium Service
                </div>
                <h1
                    class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight"
                >
                    Executive & VIP<br class="hidden md:block" />
                    <span class="text-amber-300">Fleet Services</span>
                </h1>
                <p class="text-xl text-slate-200 max-w-3xl mx-auto mb-10">
                    Make the right impression with our premium chauffeur-driven
                    luxury vehicles. Perfect for C-suite executives, VIP guests,
                    and high-stakes business meetings.
                </p>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a
                        href="#contact"
                        class="bg-amber-600 hover:bg-amber-500 text-white font-bold py-4 px-8 rounded-lg shadow-lg transition-all"
                    >
                        Reserve Now
                    </a>
                    <a
                        href="#fleet"
                        class="bg-white/10 hover:bg-white/20 text-white font-semibold py-4 px-8 rounded-lg border border-white/20 backdrop-blur-sm transition-all"
                    >
                        View Fleet
                    </a>
                </div>
            </div>
        </section>

        <!-- Why Choose VIP Service -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-slate-900 mb-4"
                    >
                        The VIP Difference
                    </h2>
                    <div class="w-20 h-1 bg-amber-600 mx-auto rounded-full">
                    </div>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center p-8">
                        <div
                            class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <i
                                class="fa-solid fa-user-tie text-3xl text-amber-600"
                            ></i>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3">
                            Professional Chauffeurs
                        </h3>
                        <p class="text-slate-600">
                            Uniformed, verified drivers with extensive training
                            in executive service protocols and discretion.
                        </p>
                    </div>

                    <div class="text-center p-8">
                        <div
                            class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <i
                                class="fa-solid fa-car-side text-3xl text-blue-600"
                            ></i>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3">
                            Luxury Vehicles
                        </h3>
                        <p class="text-slate-600">
                            Immaculately maintained premium cars including
                            Mercedes-Benz, BMW, and Innova Crysta.
                        </p>
                    </div>

                    <div class="text-center p-8">
                        <div
                            class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <i
                                class="fa-solid fa-concierge-bell text-3xl text-purple-600"
                            ></i>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3">
                            White-Glove Service
                        </h3>
                        <p class="text-slate-600">
                            Door-to-door service with luggage assistance, meet &
                            greet, and personalized attention.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Premium Fleet -->
        <section id="fleet" class="py-20 bg-slate-100">
