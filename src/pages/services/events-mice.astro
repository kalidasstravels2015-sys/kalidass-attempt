---
import Layout from "../../layouts/Layout.astro";

const title = "Events & MICE Logistics";
const description =
    "End-to-end transport management for corporate events, team offsites, and conferences. We handle bulk bookings with buses and tempo travellers.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <main class="bg-slate-50 min-h-screen">
        <!-- Hero Section -->
        <section
            class="relative bg-gradient-to-br from-orange-900 via-orange-800 to-red-900 text-white pt-32 pb-20 px-6"
        >
            <div class="max-w-5xl mx-auto text-center">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-500/20 border border-orange-400/30 text-orange-200 text-xs font-bold uppercase mb-6"
                >
                    <i class="fa-solid fa-calendar-check"></i> Event Solution
                </div>
                <h1
                    class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight"
                >
                    Events & MICE<br class="hidden md:block" />
                    <span class="text-orange-300">Logistics</span>
                </h1>
                <p class="text-xl text-slate-200 max-w-3xl mx-auto mb-10">
                    Seamless transport coordination for corporate events,
                    conferences, team offsites, and large-scale gatherings. From
                    10 to 1000+ attendees.
                </p>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a
                        href="#contact"
                        class="bg-orange-600 hover:bg-orange-500 text-white font-bold py-4 px-8 rounded-lg shadow-lg transition-all"
                    >
                        Plan Your Event
                    </a>
                    <a
                        href="#services"
                        class="bg-white/10 hover:bg-white/20 text-white font-semibold py-4 px-8 rounded-lg border border-white/20 backdrop-blur-sm transition-all"
                    >
                        Our Services
                    </a>
                </div>
            </div>
        </section>

        <!-- Event Types -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-slate-900 mb-4"
                    >
                        We Handle All Event Types
                    </h2>
                    <div class="w-20 h-1 bg-orange-600 mx-auto rounded-full">
                    </div>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div
                        class="bg-slate-50 p-6 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow"
                    >
                        <div
                            class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-4"
                        >
                            <i
                                class="fa-solid fa-users text-3xl text-orange-600"
                            ></i>
                        </div>
                        <h3 class="text-lg font-bold text-slate-900 mb-2">
                            Corporate Conferences
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Multi-day events with shuttle services, airport
                            pickups, and hotel transfers.
                        </p>
                    </div>

                    <div
                        class="bg-slate-50 p-6 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow"
                    >
                        <div
                            class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4"
                        >
                            <i
                                class="fa-solid fa-people-group text-3xl text-blue-600"
                            ></i>
                        </div>
                        <h3 class="text-lg font-bold text-slate-900 mb-2">
                            Team Offsites
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Weekend retreats, team building activities, and
                            outstation trips.
                        </p>
                    </div>

                    <div
                        class="bg-slate-50 p-6 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow"
                    >
                        <div
                            class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mb-4"
                        >
                            <i
                                class="fa-solid fa-handshake text-3xl text-purple-600"
                            ></i>
                        </div>
                        <h3 class="text-lg font-bold text-slate-900 mb-2">
                            Client Events
                        </h3>
                        <p class="text-slate-600 text-sm">
