---
import Layout from "../../layouts/Layout.astro";

const title = "On-Demand Business Travel";
const description =
    "Flexible spot rentals for client visits, airport transfers, and inter-city travel. Book reliable sedans and SUVs instantly for your team.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <main class="bg-slate-50 min-h-screen">
        <!-- Hero Section -->
        <section
            class="relative bg-gradient-to-br from-indigo-900 via-indigo-800 to-slate-900 text-white pt-32 pb-20 px-6"
        >
            <div class="max-w-5xl mx-auto text-center">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-500/20 border border-indigo-400/30 text-indigo-200 text-xs font-bold uppercase mb-6"
                >
                    <i class="fa-solid fa-briefcase"></i> Business Solution
                </div>
                <h1
                    class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight"
                >
                    On-Demand<br class="hidden md:block" />
                    <span class="text-indigo-300">Business Travel</span>
                </h1>
                <p class="text-xl text-slate-200 max-w-3xl mx-auto mb-10">
                    Book professional transport for your team on-demand. Perfect
                    for client meetings, airport transfers, and ad-hoc business
                    requirements.
                </p>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a
                        href="#booking"
                        class="bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-4 px-8 rounded-lg shadow-lg transition-all"
                    >
                        Book Now
                    </a>
                    <a
                        href="#packages"
                        class="bg-white/10 hover:bg-white/20 text-white font-semibold py-4 px-8 rounded-lg border border-white/20 backdrop-blur-sm transition-all"
                    >
                        View Packages
                    </a>
                </div>
            </div>
        </section>

        <!-- Use Cases -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-slate-900 mb-4"
                    >
                        Perfect For
                    </h2>
                    <div class="w-20 h-1 bg-indigo-600 mx-auto rounded-full">
                    </div>
                </div>

                <div class="grid md:grid-cols-4 gap-6">
                    <div class="text-center p-6">
                        <div
                            class="w-20 h-20 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <i
                                class="fa-solid fa-handshake text-3xl text-indigo-600"
                            ></i>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-2">
                            Client Meetings
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Impress clients with punctual, professional
                            transport to and from meetings.
                        </p>
                    </div>

                    <div class="text-center p-6">
                        <div
                            class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <i
                                class="fa-solid fa-plane-departure text-3xl text-blue-600"
                            ></i>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-2">
                            Airport Transfers
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Meet & greet services with flight tracking and
                            luggage assistance.
                        </p>
                    </div>

                    <div class="text-center p-6">
                        <div
                            class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <i class="fa-solid fa-city text-3xl text-purple-600"
                            ></i>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-2">
                            Inter-City Travel
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Comfortable long-distance travel for business trips
                            and site visits.
                        </p>
                    </div>

                    <div class="text-center p-6">
                        <div
                            class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <i
                                class="fa-solid fa-calendar-day text-3xl text-green-600"
                            ></i>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-2">
                            Hourly Rentals
                        </h3>
                        <p class="text-slate-600 text-sm">
                            Book by the hour for multiple stops and flexible
                            schedules.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Packages -->
        <section id="packages" class="py-20 bg-slate-100">
            <div class="max-w-7xl mx-auto px-6">
                <h2 class="text-3xl font-bold text-slate-900 mb-12 text-center">
                    Flexible Booking Options
                </h2>

                <div class="grid md:grid-cols-3 gap-8">
                    <!-- Point to Point -->
                    <div
                        class="bg-white rounded-xl p-8 shadow-sm border border-slate-200"
                    >
                        <div class="text-center mb-6">
                            <div
                                class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4"
                            >
                                <i
                                    class="fa-solid fa-location-dot text-2xl text-indigo-600"
                                ></i>
                            </div>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">
                                Point to Point
                            </h3>
                            <p class="text-slate-600">
                                Single pickup to single drop-off
                            </p>
                        </div>
                        <ul class="space-y-3 mb-6">
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Fixed pricing based on distance</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>No waiting charges for direct trips</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Ideal for airport transfers</span>
                            </li>
                        </ul>
                        <div class="text-center pt-4 border-t border-slate-200">
                            <p class="text-sm text-slate-500">Starting from</p>
                            <p class="text-3xl font-bold text-indigo-600">
                                ₹15/km
                            </p>
                        </div>
                    </div>

                    <!-- Hourly Package -->
                    <div
                        class="bg-white rounded-xl p-8 shadow-lg border-2 border-indigo-600 relative"
                    >
                        <div
                            class="absolute -top-4 left-1/2 -translate-x-1/2 bg-indigo-600 text-white px-4 py-1 rounded-full text-sm font-bold"
                        >
                            Popular
                        </div>
                        <div class="text-center mb-6">
                            <div
                                class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4"
                            >
                                <i
                                    class="fa-solid fa-clock text-2xl text-indigo-600"
                                ></i>
                            </div>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">
                                Hourly Package
                            </h3>
                            <p class="text-slate-600">
                                Book for 4, 8, or 12 hours
                            </p>
                        </div>
                        <ul class="space-y-3 mb-6">
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Multiple stops included</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Driver waiting time covered</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Best for city meetings</span>
                            </li>
                        </ul>
                        <div class="text-center pt-4 border-t border-slate-200">
                            <p class="text-sm text-slate-500">4 hours / 40km</p>
                            <p class="text-3xl font-bold text-indigo-600">
                                ₹1,800
                            </p>
                        </div>
                    </div>

                    <!-- Full Day -->
                    <div
                        class="bg-white rounded-xl p-8 shadow-sm border border-slate-200"
                    >
                        <div class="text-center mb-6">
                            <div
                                class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4"
                            >
                                <i
                                    class="fa-solid fa-calendar-day text-2xl text-indigo-600"
                                ></i>
                            </div>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">
                                Full Day
                            </h3>
                            <p class="text-slate-600">
                                12 hours at your disposal
                            </p>
                        </div>
                        <ul class="space-y-3 mb-6">
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Unlimited stops within city</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>120km distance included</span>
                            </li>
                            <li class="flex items-start gap-2 text-slate-700">
                                <i class="fa-solid fa-check text-green-500 mt-1"
                                ></i>
                                <span>Perfect for site visits</span>
                            </li>
                        </ul>
                        <div class="text-center pt-4 border-t border-slate-200">
                            <p class="text-sm text-slate-500">
                                12 hours / 120km
                            </p>
                            <p class="text-3xl font-bold text-indigo-600">
                                ₹3,200
                            </p>
                        </div>
                    </div>
                </div>

                <p class="text-center text-slate-500 text-sm mt-8">
                    *Prices for sedan category. SUV and luxury options
                    available. Toll & parking extra.
                </p>
            </div>
        </section>

        <!-- Fleet Options -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <h2 class="text-3xl font-bold text-slate-900 mb-12 text-center">
                    Choose Your Vehicle
                </h2>

                <div class="grid md:grid-cols-3 gap-8">
                    <div
                        class="border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow"
                    >
                        <div
                            class="h-48 bg-slate-200 flex items-center justify-center"
                        >
                            <i class="fa-solid fa-car text-6xl text-slate-400"
                            ></i>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-900 mb-2">
                                Sedan
                            </h3>
                            <p class="text-slate-600 text-sm mb-4">
                                Swift Dzire, Etios, Honda City
                            </p>
                            <ul class="space-y-2 text-sm text-slate-700">
                                <li>
                                    <i class="fa-solid fa-user text-indigo-600"
                                    ></i> 4 Passengers
                                </li>
                                <li>
                                    <i
                                        class="fa-solid fa-suitcase text-indigo-600"
                                    ></i> 2-3 Bags
                                </li>
                                <li>
                                    <i
                                        class="fa-solid fa-snowflake text-indigo-600"
                                    ></i> AC
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="border-2 border-indigo-600 rounded-xl overflow-hidden shadow-lg"
                    >
                        <div
                            class="h-48 bg-slate-200 flex items-center justify-center"
                        >
                            <i
                                class="fa-solid fa-car-side text-6xl text-slate-400"
                            ></i>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-900 mb-2">
                                SUV
                            </h3>
                            <p class="text-slate-600 text-sm mb-4">
                                Innova, Ertiga, XUV
                            </p>
                            <ul class="space-y-2 text-sm text-slate-700">
                                <li>
                                    <i class="fa-solid fa-user text-indigo-600"
                                    ></i> 6-7 Passengers
                                </li>
                                <li>
                                    <i
                                        class="fa-solid fa-suitcase text-indigo-600"
                                    ></i> 4-5 Bags
                                </li>
                                <li>
                                    <i
                                        class="fa-solid fa-snowflake text-indigo-600"
                                    ></i> AC
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow"
                    >
                        <div
                            class="h-48 bg-slate-200 flex items-center justify-center"
                        >
                            <i class="fa-solid fa-gem text-6xl text-slate-400"
                            ></i>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-900 mb-2">
                                Luxury
                            </h3>
                            <p class="text-slate-600 text-sm mb-4">
                                Innova Crysta, Camry, Benz
                            </p>
                            <ul class="space-y-2 text-sm text-slate-700">
                                <li>
                                    <i class="fa-solid fa-user text-indigo-600"
                                    ></i> 4-6 Passengers
                                </li>
                                <li>
                                    <i
                                        class="fa-solid fa-suitcase text-indigo-600"
                                    ></i> 3-4 Bags
                                </li>
                                <li>
                                    <i class="fa-solid fa-star text-indigo-600"
                                    ></i> Premium
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Booking CTA -->
        <section id="booking" class="bg-slate-900 text-white py-16">
            <div class="max-w-4xl mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-6">
                    Book Your Business Ride Now
                </h2>
                <p class="text-slate-300 text-lg mb-10">
                    Instant booking confirmation. Professional drivers.
                    Corporate billing available.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="tel:+919092303060"
                        class="inline-flex items-center justify-center gap-3 bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-4 px-8 rounded-lg transition-all"
                    >
                        <i class="fa-solid fa-phone"></i> Call to Book
                    </a>
                    <a
                        href="https://wa.me/919092303060?text=Hi, I need a business travel booking"
                        class="inline-flex items-center justify-center gap-3 bg-green-600 hover:bg-green-500 text-white font-bold py-4 px-8 rounded-lg transition-all"
                    >
                        <i class="fa-brands fa-whatsapp"></i> WhatsApp
                    </a>
                </div>
                <p class="text-slate-400 text-sm mt-6">
                    Available 24/7 for bookings and support
                </p>
            </div>
        </section>
    </main>
</Layout>
