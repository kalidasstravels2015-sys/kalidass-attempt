---
import Layout from '../layouts/Layout.astro';
import DriverFeeEstimator from '../components/DriverFeeEstimator.astro';
import VehicleRelocationCalculator from '../components/VehicleRelocationCalculator.jsx';
---

<Layout title="Trip Cost Calculator | Kalidass Travels" description="Calculate the cost for acting drivers and vehicle relocation services.">
  <div class="bg-slate-50 min-h-screen pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-slate-900 mb-4">Trip Cost Calculator</h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Estimate your travel costs instantly for our acting driver and vehicle relocation services.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
        {/* Acting Driver Cost Calculator */}
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
          <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center gap-2">
            <span class="bg-indigo-100 text-indigo-600 p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </span>
            Acting Driver Cost
          </h2>
          <DriverFeeEstimator />
        </div>

        {/* Vehicle Relocation Quote */}
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
          <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center gap-2">
            <span class="bg-green-100 text-green-600 p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </span>
            Vehicle Relocation Quote
          </h2>
          <VehicleRelocationCalculator client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
